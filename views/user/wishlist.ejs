						function removewishlist(id, wishid) {
							console.log(wishid + "GGGGGGGGGGGGGGGGGG");
							Swal.fire({
								title: 'Are you sure?',
								text: "You won't be able to revert this!",
								icon: 'warning',
								showCancelButton: true,
								confirmButtonColor: '#3085d6',
								cancelButtonColor: '#d33',
								confirmButtonText: 'Yes, delete it!'
							}).then((result) => {
								if (result.isConfirmed) {

									$.ajax({
										type: "POST",
										url: "/removewishlist",
										data: { id, wishid },
										dataType: "json",
										encode: true,
									}).done(function () {
										$('#divitem' + id).remove()
										Swal.fire(
											'removed!',
											'This Product has been removed.',
											'success'
										)


									});
								}
							})
						}


						function addtocart(id) {
							console.log("innnnnnn");
							$.ajax({
