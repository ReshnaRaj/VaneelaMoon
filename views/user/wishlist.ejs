							}).done(function (data) {
								if (data == "login first") {
									console.log("SWEET");
									Swal.fire({
										icon: 'error',
										title: 'Oops...',
										text: 'Login first!',
										footer: '<a href="/login">Go to login</a>'
									})
								} else if (data == 'added') {
									console.log("inside else");
									Swal.fire(
										'Added',
										'This Product is added to your cart.',
										'success'
									)
								}
								else if (data == "quantity inc") {
									Swal.fire(
										'quantity inc',
										'This to your cart.',
										'success'
									)
								}
								console.log("hiiiiii");
